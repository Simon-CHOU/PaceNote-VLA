<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Vehicle Settings">
        <SwitchPreferenceCompat
            android:key="is_lhd"
            android:title="LHD / RHD"
            android:summary="Toggle between Left Hand Drive and Right Hand Drive"
            android:defaultValue="true" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Language">
        <ListPreference
            android:key="language"
            android:title="Language"
            android:summary="@string/language"
            android:entries="@array/language_entries"
            android:entryValues="@array/language_values"
            android:defaultValue="en" />
    </PreferenceCategory>
</PreferenceScreen>
